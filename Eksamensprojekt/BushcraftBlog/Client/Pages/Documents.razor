@page "/documents"
@inject HttpClient Http;
@using BushcraftBlog.Shared.Models;

<h2>List of Bushcraft Documents</h2>

@if (AllDocuments != null && AllDocuments.Count > 0)
{
    <h3>Here are @AllDocuments.Count Bushcraft Documents for you 🙂👍</h3>

    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Heading</th>
                <th>Content</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doc in AllDocuments)
            {
                <tr>
                    <td>@doc.Id</td>
                    <td>@doc.Name</td>
                    <td>@doc.Heading</td>
                    <td>@doc.Content</td>
                </tr>
            }
        </tbody>
    </table>
}

@code{
    private List<Document>? AllDocuments;

    protected override async Task OnInitializedAsync()
    {
        AllDocuments = await Http.GetFromJsonAsync<List<Document>>("api/Documents");
    }
}